<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@task.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>
 
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing <%= @task.title %></h1>
        <p>
            <h2>Subtasks</h2>
            <ol>
                <% @task.subtasks.each do |subtask| %>
                    <li><%= subtask.title%></li>
                <% end %>
            </ol>
        </p>

<%= form_for @task  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.submit %>
<% end %>
