<%= form_for @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <p>Create at least One Subtask for this task</p>
        <%= f.fields_for :subtasks do |subtask_builder| %>
            <%= subtask_builder.label :title %>
            <%= subtask_builder.text_field :title %>
        <% end %>


<br><br>
    <%= f.submit %>

<% end %>